<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tab1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sense"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:gravity="center"
        android:scrollX="44dp"
        android:text="Не несет особого смысла!"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="Мое первое приложение, которое вроде что-то может, но без особого смысла. Все в развлекательных целях, наедюсь Вы хотя бы разок улыбнетесь)"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        tools:textColor="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_gravity="right"
        android:text="Бредни разраба"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="207dp"
        android:layout_height="128dp"
        android:layout_gravity="right"
        android:text="Кодил на линуксе бубунта хфсе(крыска). И все же 4 гб оперативки мало) Винда ведроид студию не тянет)"
        android:textColor="@android:color/holo_green_light"
        tools:textColor="@android:color/holo_green_light" />
</LinearLayout>
